{
  "manifest_version": 3,
  "name": "CART",
  "description": "Export Amazon cart data to CSV",
  "version": "0.1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "CART"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://oauth2.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "946635487950-m0lvfb5981k8t20rgd2lq4slkri3k82h.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.file"
    ]
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/gp/cart/*",
        "https://*.amazon.com/cart/*",
        "https://www.amazon.com/gp/cart/view.html*"
      ],
      "js": [
        "content/index.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
