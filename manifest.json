{
  "manifest_version": 3,
  "name": "CART",
  "description": "Export Amazon cart data to CSV",
  "version": "0.1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "CART"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.amazon.com/*"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/gp/cart/*",
        "https://*.amazon.com/cart/*",
        "https://www.amazon.com/gp/cart/view.html*"
      ],
      "js": [
        "content/index.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
